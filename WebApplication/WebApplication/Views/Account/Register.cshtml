@model WebApplication.ViewModels.RegisterViewModel

<h2>Регистрация</h2>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div asp-validation-summary="All">
        <div>
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm">Повторите пароль</label><br />
            <input asp-for="PasswordConfirm"  />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}